<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/pokemonSpriteDetail"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="16dp"/>

        <TextView
            android:id="@+id/pokedexNumberDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/pokemonSpriteDetail"
            android:layout_toEndOf="@+id/pokemonSpriteDetail"
            android:layout_toRightOf="@+id/pokemonSpriteDetail"
            android:text="TextView"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/pokemonNameDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/pokemonSpriteDetail"
            android:layout_toRightOf="@+id/pokemonSpriteDetail"
            android:text="TextView"
            android:textSize="30sp"/>

        <ImageView
            android:id="@+id/pokemonTypeOne"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/pokemonSpriteDetail"
            android:layout_toRightOf="@+id/pokemonSpriteDetail"
            android:layout_toEndOf="@+id/pokemonSpriteDetail"/>

        <ImageView
            android:id="@+id/pokemonTypeTwo"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_toRightOf="@+id/pokedexNumberDetail"
            android:layout_toEndOf="@+id/pokedexNumberDetail"
            android:layout_alignTop="@+id/pokemonTypeOne"/>

    </RelativeLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lvStats" />

</LinearLayout>
